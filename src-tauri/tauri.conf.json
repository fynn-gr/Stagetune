{
  "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pureStage",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "scope": ["*/*", "$DESKTOP/*", "$DATA/*", "$APPCONFIG/*", "$DOCUMENT/*"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Fynn Gr. 2023",
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.fynn.gr",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "minimumSystemVersion": "11.0",
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src: 'self'; media-src 'self' asset:"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fileDropEnabled": false,
        "fullscreen": false,
        "width": 1280,
        "height": 720,
        "minWidth": 550,
        "minHeight": 400,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "title": "pureStage"
      }
    ]
  }
}